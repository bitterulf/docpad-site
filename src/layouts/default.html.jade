doctype html
include ./mixins.jade
html
  head
    title= document.title
    !{ getBlock("meta").toHTML() }
    !{ getBlock("styles").add(['/styles/main.css']).toHTML() }
  body
    +head()
    +renderMenu(document)
    +title(document.title)
    +content(document)
    +renderPages()
    div.bottom
      div.navigation!= getNavLinks()
      +renderRelated(getRelatedDocuments())
